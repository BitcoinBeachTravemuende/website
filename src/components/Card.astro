---
import ExternalButton from "./ExternalButton.astro";

type Category = "pow" | "social";

interface Props {
  url: string;
  imgSrc: string;
  label: string;
  position: number;
  headline: string;
  description?: string;
  category: Category;
  class?: string;
}

const {
  url,
  imgSrc,
  label,
  position,
  headline,
  category,
  class: className = "",
} = Astro.props;

const powLabel = "Proof of Work";
const powLabelShort = "PoW";
const socLabel = "Social Media";
const socLabelShort = "Social";
---

<div
  class={`group relative flex flex-col lg:flex-row lg:odd:flex-row-reverse w-full overflow-hidden bg-zinc-100 lg:h-96 rounded-2xl ${className}`}
>
  <div
    class="ease flex h-auto w-full flex-row gap-3 p-4 md:p-6 lg:h-full lg:w-2/3 lg:gap-6 lg:p-8 lg:group-odd:flex-row-reverse xl:w-1/2"
  >
    <div>
      <div
        class="flex flex-col items-center border-r-4 border-zinc-400 pr-3 text-zinc-400 lg:border-r-0 lg:group-odd:border-l-4 lg:group-odd:pl-3 lg:group-even:border-r-4 lg:group-even:pr-3"
      >
        <div class="text-2xl md:text-5xl lg:text-7xl">
          {position < 9 ? `0${position + 1}` : position + 1}
        </div>
        <span class="hidden text-xs uppercase leading-none lg:block">
          {category === "pow" ? powLabel : socLabel}
        </span>
        <span class="text-xs uppercase leading-none lg:hidden"
          >{category === "pow" ? powLabelShort : socLabelShort}</span
        >
      </div>
    </div>

    <div class="flex flex-1 flex-col">
      <div class="flex flex-1 flex-col">
        <h1
          class="mb-2 flex flex-row items-center text-2xl uppercase text-zinc-600 md:text-5xl lg:text-7xl"
        >
          {headline}
        </h1>

        <div
          class="ease max-w-[80%] pt-3 text-sm uppercase text-zinc-500 md:text-base lg:pt-5 lg:text-lg 2xl:text-2xl"
        >
          <slot />
        </div>
      </div>
    </div>
  </div>

  <a
    href={url}
    class="ease group/img relative flex h-48 w-full cursor-pointer bg-zinc-200 p-0 lg:h-full lg:w-1/3 xl:w-1/2"
  >
    <div class="h-full w-full overflow-hidden">
      <img
        src={imgSrc}
        class="ease h-full w-full object-cover saturate-50 group-hover/img:scale-110 group-hover/img:brightness-50 group-hover/img:saturate-100"
        alt=""
      />
    </div>
    <ExternalButton
      class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 rounded-full border-4 border-white bg-btc px-5 py-2 text-base uppercase text-white shadow-lg group-hover/img:scale-110 group-hover/img:border-btc group-hover/img:bg-white group-hover/img:text-btc lg:text-xl xl:text-2xl"
      >{label}</ExternalButton
    >
  </a>
</div>
